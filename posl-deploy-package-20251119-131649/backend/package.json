{
  "name": "posl-backend",
  "version": "1.0.0",
  "description": "POSL Backend - AWS Lambda Functions",
  "main": "src/index.js",
  "scripts": {
    "dev": "scripts/dev-server.sh start",
    "dev:stop": "scripts/dev-server.sh stop",
    "dev:restart": "scripts/dev-server.sh restart",
    "dev:status": "scripts/dev-server.sh status",
    "dev:logs": "scripts/dev-server.sh logs",
    "dev:raw": "serverless offline --stage local --host 0.0.0.0 --httpPort 3001",
    "build": "tsc",
    "deploy:dev": "serverless deploy --stage dev",
    "deploy:prod": "serverless deploy --stage prod",
    "remove:dev": "serverless remove --stage dev",
    "remove:prod": "serverless remove --stage prod",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.441.0",
    "@aws-sdk/client-s3": "^3.441.0",
    "@aws-sdk/client-secrets-manager": "^3.441.0",
    "@aws-sdk/lib-dynamodb": "^3.441.0",
    "@aws-sdk/s3-request-presigner": "^3.932.0",
    "@types/cheerio": "^0.22.35",
    "axios": "^1.6.0",
    "cheerio": "^1.1.2",
    "date-fns": "^2.30.0",
    "got": "^14.6.4",
    "joi": "^17.11.0",
    "lodash": "^4.17.21",
    "mysql2": "^3.15.3",
    "node-cron": "^3.0.2",
    "oauth-1.0a": "^2.2.6",
    "openai": "^4.17.0",
    "twitter-api-v2": "^1.15.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@aws-sdk/types": "^3.441.0",
    "@types/aws-lambda": "^8.10.126",
    "@types/jest": "^29.5.7",
    "@types/lodash": "^4.14.201",
    "@types/node": "^20.0.0",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^9.0.6",
    "@typescript-eslint/eslint-plugin": "^6.9.0",
    "@typescript-eslint/parser": "^6.9.0",
    "eslint": "^8.52.0",
    "jest": "^29.7.0",
    "prettier": "^3.0.0",
    "serverless": "^3.40.0",
    "serverless-iam-roles-per-function": "^3.2.0",
    "serverless-offline": "^13.9.0",
    "serverless-webpack": "^5.15.3",
    "supertest": "^7.1.4",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.5.0",
    "ts-node": "^10.9.0",
    "typescript": "^5.2.0",
    "webpack": "^5.89.0",
    "webpack-node-externals": "^3.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
