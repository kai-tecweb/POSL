{
  "name": "posl-backend",
  "version": "1.0.0",
  "description": "POSL Backend - AWS Lambda Functions",
  "main": "src/index.js",
  "scripts": {
    "dev": "serverless offline --stage local --host 0.0.0.0 --httpPort 3001",
    "build": "tsc",
    "deploy:dev": "serverless deploy --stage dev",
    "deploy:prod": "serverless deploy --stage prod",
    "remove:dev": "serverless remove --stage dev",
    "remove:prod": "serverless remove --stage prod",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "dependencies": {
    "aws-lambda": "^1.0.7",
    "aws-sdk": "^2.1470.0",
    "@aws-sdk/client-dynamodb": "^3.441.0",
    "@aws-sdk/client-s3": "^3.441.0",
    "@aws-sdk/client-secrets-manager": "^3.441.0",
    "@aws-sdk/lib-dynamodb": "^3.441.0",
    "openai": "^4.17.0",
    "twitter-api-v2": "^1.15.0",
    "pytrends": "^1.0.0",
    "axios": "^1.6.0",
    "node-cron": "^3.0.2",
    "uuid": "^9.0.1",
    "joi": "^17.11.0",
    "lodash": "^4.17.21",
    "date-fns": "^2.30.0"
  },
  "devDependencies": {
    "serverless": "^3.38.0",
    "serverless-offline": "^13.3.0",
    "serverless-webpack": "^5.13.0",
    "serverless-iam-roles-per-function": "^3.2.0",
    "webpack": "^5.89.0",
    "webpack-node-externals": "^3.0.0",
    "typescript": "^5.2.0",
    "ts-loader": "^9.5.0",
    "ts-node": "^10.9.0",
    "@types/node": "^20.0.0",
    "@types/aws-lambda": "^8.10.126",
    "@types/uuid": "^9.0.6",
    "@types/lodash": "^4.14.201",
    "eslint": "^8.52.0",
    "@typescript-eslint/eslint-plugin": "^6.9.0",
    "@typescript-eslint/parser": "^6.9.0",
    "prettier": "^3.0.0",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.7",
    "ts-jest": "^29.1.1",
    "@aws-sdk/types": "^3.441.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}